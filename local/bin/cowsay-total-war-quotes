#!/bin/sh

quotes_path="${XDG_DATA_HOME:-"$HOME/.local/share"}/total_war_quotes"

columns="${COLUMNS:-80}"
cow_columns="$(expr "$columns" - 3)"

< "$quotes_path" sed 's/^$/#/' |
    tr '#' '\0' |
    shuf --zero-terminated --head-count 1 |
    sed '/^$/ d' |
    tr -d '\0' |
    cowsay -W "$cow_columns"
