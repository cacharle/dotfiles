#!/bin/sh

[ "$#" -ne 1 ] && exit 1;


if [ "$(hostname)" = manjaro ]
then
    cmd=light
    up_opt=-A
    down_opt=-U
else
    cmd=xbacklight
    up_opt=-inc
    down_opt=-dec
fi

case "$1" in
    "up")   "$cmd" "$up_opt"   5 ;;
    "down") "$cmd" "$down_opt" 5 ;;
    *)      exit 1 ;;
esac

value="$("$cmd" | cut -d '.' -f 1)"

notify-send --hint=int:transient:1 --hint=int:value:"$value" "Backlight"
